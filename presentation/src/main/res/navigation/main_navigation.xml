<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.ggjg.presentation.ui.main.MainFragment"
        android:label="MainFragment"
        tools:layout="@layout/fragment_main">
        <action
            android:id="@+id/action_mainFragment_to_orderFragment"
            app:destination="@id/orderFragment" />
        <action
            android:id="@+id/action_mainFragment_to_clientFragment"
            app:destination="@id/clientFragment" />
        <action
            android:id="@+id/action_mainFragment_to_bannerFragment"
            app:destination="@id/bannerFragment" />
        <action
            android:id="@+id/action_mainFragment_to_breadFragment"
            app:destination="@id/breadFragment" />
    </fragment>
    <fragment
        android:id="@+id/bannerFragment"
        android:name="com.ggjg.presentation.ui.banner.BannerFragment"
        android:label="BannerFragment"
        tools:layout="@layout/fragment_banner" />
    <fragment
        android:id="@+id/clientFragment"
        android:name="com.ggjg.presentation.ui.client.ClientFragment"
        android:label="ClientFragment"
        tools:layout="@layout/fragment_client" />
    <fragment
        android:id="@+id/orderFragment"
        android:name="com.ggjg.presentation.ui.order.OrderFragment"
        android:label="OrderFragment"
        tools:layout="@layout/fragment_order" />
    <fragment
        android:id="@+id/breadFragment"
        android:name="com.ggjg.presentation.ui.bread.BreadFragment"
        android:label="BreadFragment"
        tools:layout="@layout/fragment_bread" />
</navigation>